<%= link_to "Sign Out", logout_path, method: :delete %>

<h3>New Link</h3>
<div class="new-link-form">
  <%= form_for :link do |f| %>
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.url_field :url, placeholder: "URL" %>
    <%= f.submit "Submit" %>
  <% end %>
</div>

<h3>Links Index</h3>

<section class="link-lists">

  <% @user_links.each do |link| %>
    <div data-link-id=<%= link.id %> data-user-id= <%=current_user.id %> >
        Title: <%= link.title %> </br>
        URL: <%= link.url %> </br>
        Read? <%= link.read %></br>
    </div>
  <% end %>
</section>
